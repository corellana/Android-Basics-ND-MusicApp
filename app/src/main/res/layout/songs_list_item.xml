<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/song_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/song_name_song_list_item_padding_end"
        android:paddingLeft="@dimen/song_name_song_list_item_padding_start"
        android:paddingRight="@dimen/song_name_song_list_item_padding_end"
        android:paddingStart="@dimen/song_name_song_list_item_padding_start"
        android:paddingTop="@dimen/song_name_song_list_item_padding_top"
        android:textSize="@dimen/song_name_song_list_item_text_size"
        tools:text="@string/song_name_text"
        android:fontFamily="@font/robotobold"/>

    <TextView
        android:id="@+id/artist_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/artist_name_song_list_item_padding_bottom"
        android:paddingEnd="@dimen/artist_name_song_list_item_padding_end"
        android:paddingLeft="@dimen/artist_name_song_list_item_padding_start"
        android:paddingRight="@dimen/artist_name_song_list_item_padding_end"
        android:paddingStart="@dimen/artist_name_song_list_item_padding_start"
        android:textSize="@dimen/artist_name_song_list_item_text_size"
        tools:text="@string/artist_name_text"
        android:fontFamily="@font/robotolight"/>

</LinearLayout>
